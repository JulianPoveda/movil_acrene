<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    

    <TextView
        android:id="@+id/LblVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/LblVersion"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/LblPDA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblVersion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="@string/LblPDA"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/TxtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LblPDA"
        android:layout_below="@+id/LblPDA"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/LblUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TxtUsuario"
        android:layout_alignTop="@+id/TxtUsuario"
        android:layout_marginRight="29dp"
        android:layout_toLeftOf="@+id/TxtUsuario"
        android:gravity="center_vertical"
        android:text="@string/LblUsuario"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/TxtContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TxtUsuario"
        android:layout_below="@+id/TxtUsuario"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/LblContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TxtContrasena"
        android:layout_alignRight="@+id/LblUsuario"
        android:layout_alignTop="@+id/TxtContrasena"
        android:gravity="center_horizontal"
        android:text="@string/LblContrasena"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/BtnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtContrasena"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/BtnLoggin" />

</RelativeLayout>

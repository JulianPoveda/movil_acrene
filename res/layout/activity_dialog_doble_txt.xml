<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="${packageName}.${activityClass}" >
    
    <TextView
        android:id="@+id/dd_lbl_text2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dd_txt_text2"
        android:layout_alignRight="@+id/dd_btn_aceptar"
        android:layout_alignTop="@+id/dd_txt_text2"
        android:gravity="right|center_vertical"
        android:text="@string/dd_lbl_text2"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/dd_txt_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dd_txt_text1"
        android:layout_below="@+id/dd_txt_text1"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/dd_btn_aceptar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dd_btn_cancelar"
        android:layout_alignBottom="@+id/dd_btn_cancelar"
        android:layout_toLeftOf="@+id/dd_txt_text2"
        android:text="@string/dd_btn_aceptar" />

    <Button
        android:id="@+id/dd_btn_cancelar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dd_txt_text2"
        android:layout_below="@+id/dd_txt_text2"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="23dp"
        android:text="@string/dd_btn_cancelar" />

    <TextView
        android:id="@+id/dd_lbl_titulo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/dd_lbl_titulo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/dd_txt_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dd_lbl_titulo"
        android:layout_below="@+id/dd_lbl_titulo"
        android:layout_marginRight="21dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/dd_lbl_text1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dd_lbl_text2"
        android:layout_alignTop="@+id/dd_txt_text1"
        android:gravity="right|center_vertical"
        android:text="@string/dd_lbl_text1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
